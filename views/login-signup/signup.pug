extends layout

block content
    div(class='login-wrapper')
        div(class='space')
        div(class='login-container')
            form(method="post" action="signup")
                h1(class='login-title') Sign up for Photoboard

                div(class='form-row')
                    input(class='form-input' type='text' id='signup-input-firstName' placeholder=' ' onpaste="return false" name='firstName')
                    label(class='form-label' for='signup-input-firstName') First Name

                div(class='form-row')
                    input(class='form-input' type='text' id='signup-input-lastName'  placeholder=' ' onpaste="return false" name='lastName')
                    label(class='form-label' for='signup-input-lastName') Last Name

                div(class='form-row')
                    input(class='form-input' type='text' id='signup-input-username' placeholder=' ' onpaste="return false" name='username')
                    label(class='form-label' for='signup-input-username') School ID

                div(class='form-row')
                    input(class='form-input' type='password' id='signup-input-password' placeholder=' ' onpaste="return false" name='password')
                    label(class='form-label' for='signup-input-password') Password

                div(class='form-row')
                    input(class='form-input' type='password' id='signup-input-confirm-password' placeholder=' ' onpaste="return false" name='confirmPassword')
                    label(class='form-label' for='signup-input-confirm-password') Confirm Password

                div(class='form-row')
                    input(class='form-input' type='text' id='signup-input-classCode' placeholder=' ' onpaste="return false" name='classCode')
                    label(class='form-label' for='signup-input-classCode') Class Code

                div(class='login-error-container' id='signup_error')
                                    p(class='login-error-text')= signup_error


                button(class='submit-btn' type='submit' onclick='checkForm()') Join

                p(class='signup-text') Already have an account?
                    a(href='/')  Log in.
    script(src="/scripts/signup-verify.js")
    button(onclick='checkForm()') Join