extends layout

block content
    div(class='login-wrapper')
        div(class='space')
        div(class='login-container')
            form(method="post" action="signup")
                h1(class='login-title') Sign up for Photoboard

                div(class='form-row')
                    input(class='form-input' type='text' id='signup-input-firstName' placeholder=' ' onpaste="return false" name='firstName' style='border-bottom-color: ' + firstNameColor)
                    label(class='form-label' for='signup-input-firstName') First Name

                div(class='form-row')
                    input(class='form-input' type='text' id='signup-input-lastName'  placeholder=' ' onpaste="return false" name='lastName' style='border-bottom-color: ' + lastNameColor)
                    label(class='form-label' for='signup-input-lastName') Last Name

                div(class='form-row')
                    input(class='form-input' type='text' id='signup-input-username' placeholder=' ' onpaste="return false" name='username' style='border-bottom-color: ' + usernameColor)
                    label(class='form-label' for='signup-input-username') School ID

                div(class='form-row')
                    input(class='form-input' type='password' id='signup-input-password' placeholder=' ' onpaste="return false" name='password' style='border-bottom-color: ' + passwordColor)
                    label(class='form-label' for='signup-input-password') Password

                div(class='form-row')
                    input(class='form-input' type='password' id='signup-input-confirm-password' placeholder=' ' onpaste="return false" name='confirmPassword' style='border-bottom-color: ' + confirmPasswordColor)
                    label(class='form-label' for='signup-input-confirm-password') Confirm Password

                div(class='form-row')
                    input(class='form-input' type='text' id='signup-input-class-code' placeholder=' ' onpaste="return false" name='classCode' style='border-bottom-color: ' + classCodeColor)
                    label(class='form-label' for='signup-input-class-code') Class Code

                div(class='login-error-container' id='signup_error')
                                    p(class='login-error-text')= signup_error


                button(class='submit-btn' type='submit' onclick='checkForm()') Join

                p(class='signup-text') Already have an account?
                    a(href='/')  Log in.
//-
    script(src="/scripts/signup-verify.js")
